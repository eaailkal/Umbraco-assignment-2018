@inherits Umbraco.Web.Macros.PartialViewMacroPage
@using Umbraco.Web


@{
	var selection = Model.Content.Site().FirstChild("articlesOverview").Children("articleItem")
						.Where(x => x.IsVisible())
						.OrderBy("CreateDate desc");  
}  

<div>
	@foreach(var item in selection){
	
		<div>
			<h4><a href="@item.Url">@item.Name</a></h4>
		</div>
		
        <div class="articlepreview">
            @* Umbraco.Truncate(@item.GetPropertyValue("articleContent"),100) *@
            @item.GetPropertyValue("articleContent")
            @* @Umbraco.Truncate(@item.GetPropertyValue("articleContent"),100) *@ <a href="@item.Url">Read More..</a>
        </div>
		
		<hr>
		
	}
</div>

