@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@* @using ContentModels = Umbraco.Web.PublishedContentModels; *@

@{
	Layout = null;
}

@* the fun starts here *@

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="description" content="@Umbraco.Field(" metaDescription")">
    <meta name="keywords" content="@Umbraco.Field(" metaKeywords")">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@CurrentPage.Name - @Umbraco.Field("siteTitle")</title>

    <!-- Bootstrap CSS -->
    
    <link href='https://fonts.googleapis.com/css?family=Lora:400,400italic|Work+Sans:300,400,500,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/content/bootstrap/toolkit-startup.css">
    <link rel="stylesheet" href="~/content/bootstrap/application-startup.css">
    <!-- <link rel="stylesheet" href="~/content/bootstrap/bootstrap.css"> -->
    

    <!-- Custom styles for this template -->
    <!-- <link href="https://getbootstrap.com/docs/4.0/examples/sticky-footer-navbar/sticky-footer-navbar.css" rel="stylesheet"> -->

</head>

<body>

    <div class="stage" id="stage">

        @if (@CurrentPage.Name == "Landing page") 
        { 
        @:<div class="block block-inverse block-fill-height app-header" style="background-image: url(../content/img/startup-1.jpg);"> 
        }
        else { 
        @:<div class="p-y-lg p-x" style="background: url(/content/img/startup-1.jpg) top center; background-size: cover"> 
        }

            <nav class="navbar navbar-transparent navbar-fixed-top navbar-padded nav-bordered app-navbar p-t-md">

                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed p-x-0"
                                data-target="#stage" data-toggle="stage" data-distance="-250">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/" title="Aarhus Web Developers Network" >
                            <strong style="background: #fff; padding: 12px; border-radius: 4px; color: #28669F;">
                                Aarhus Web Dev
                            </strong>
                        </a>
                    </div>

                    <div class="navbar-collapse collapse text-uppercase">

                        @Umbraco.RenderMacro("mainMenu")

                    </div><!--/.nav-collapse -->
                </div>
            </nav>

@if (@CurrentPage.Name == "Landing page") 
        { 
        
<div class="block-xs-middle p-b-lg">
    <div class="container">
      <div class="row">
        <div class="col-sm-10 col-md-6">
          <h1 class="block-title m-b-sm">
              <strong class="text-ribbon text-ribbon-primary"><span>Aarhus<br /> Web Developers Network</span></strong>
          </h1>
          <p class="m-t-md">
  <span class="text-ribbon text-ribbon-primary">
    <span>
        
        @Umbraco.Field("mainContent")
    
    </span>
  </span>
</p>
              <br /><a href="/#latest"><button class="btn">Dive in</button></a>
          
        </div>
      </div>
    </div>
  </div>
  
        }

        </div>
        
        

            <div class="block block-secondary app-block-marketing-grid">
                <div class="container text-center">
                    
                    <!-- Begin page content -->
                    @RenderBody()

                </div>
            </div>

            <div class="block block-inverse app-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6 m-b-md">
                            @if (@CurrentPage.Name == "Landing page") 
                            { 
                            <ul class="list-unstyled list-spaced">
                                <li class="m-b"><h6 class="text-uppercase">About</h6></li>
                                <li class="text-muted">

                                    @Umbraco.Field("footer")

                                </li>
                            </ul>
                            } else {
                            <img src="/content/img/aarhus-logo.svg" style="width: 40%;">
                            }
                        </div>

                        @Umbraco.RenderMacro("sitemap_main")

                        <div class="col-sm-4 m-b-md">
                            <ul class="list-unstyled list-spaced">
                                <li class="m-b"><h6 class="text-uppercase">Contacts</h6></li>
                                <li class="text-muted">Email: <a href="mailto:awdn@awdn.com">awdn@awdn.com</a></li>
                                <li class="text-muted">Phone: 0877 6759</li>
                                <li class="text-muted">Address: Søren Nymarks Vej 6, 8270</li>
                                <li class="text-muted">Aarhus, Denmark</li>
                            </ul>
                        </div>

                    </div>
                </div>

            </div>

        </div>
            
            <script src="assets/js/jquery.min.js"></script>
            <script src="~/content/bootstrap/js/toolkit.js"></script>
            <script src="~/content/bootstrap/js/application.js"></script>
            
            <!-- Optional JavaScript -->
            <!-- jQuery first, then Popper.js, then Bootstrap JS -->
            
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="/scripts/bootstrap.min.js"></script>
        

            

</body>
</html>